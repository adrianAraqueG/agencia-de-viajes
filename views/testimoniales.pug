extends ./layout/index

block contenido
    main.container.mt-5

        h1.text-center.mt-5 #{pagina}

        include ./layout/bloque_testimonios

        h2.d-block.width-100.text-center Agrega un Testimonial

        .row 


            .col-md-12
                if(errores)
                    each error in errores 
                        .alert.col.alert-danger.text-center= error

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre 
                            input#nombre(type="text", name="nombre", class="form-control" value=`${nombre || ''}`)
                        .form-group
                            label(for="correo") Correo 
                            input#correo(type="text", name="correo", class="form-control" value=`${correo || ''}`)
                        .form-group
                            label(for="mensaje") Tu Mensaje 
                            textarea#mensaje(name="mensaje", cols="30", rows="5", class="form-control")= mensaje

                        input.btn.btn-success.btn-block(type="submit", value="Enviar") 